<% layout('./layout/boilerplate') %>
    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
        <title>Document</title>
    </head>

    <body>
        <div class="row">
            <div class="col-6 offset-3">
                <h1>New Campground</h1>
                <form action="/campground" method="POST" class="validated-form" novalidate enctype="multipart/form-data">
                    <div>
                        <label class="form-label" for="title">Title</label>
                        <input class="form-control" type="text" id="title" name="campground[title]" required>
                    </div>
                    <div>
                        <label class="form-label" for="location">Location</label>
                        <input class="form-control" type="text" id="location" name="campground[location]" required>
                    </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Choose Image</label>
                            <input class="form-control" type="file" name="image" id="image" required>
                          </div>
                        <!-- <label class="form-label mt-2" for="image">Image URL: </label>
                        <span class="input-group-text" id="basic-addon1">@</span> -->
                        <!-- <input type="file" name="image" id="campground[image]"> -->
                        <!-- <input type="text" class="form-control" id="image" name="campground[image]"
                            placeholder="Enter image URL" aria-label="Image URL" aria-describedby="basic-addon1" required> -->
                    <div class="input-group mb-3">
                        <label class="form-label mt-2 mr-2" for="description">Price: </label>
                        <span class="input-group-text">$</span>
                        <input type="text" class="form-control" id="price" name="campground[price]" required>
                        <span class="input-group-text">.00</span>
                      </div>
                    <div>
                        <label class="form-label" for="description">Description</label>
                        <textarea class="form-control" id="description" name="campground[description]" cols="30"
                            rows="5" required></textarea>
                    </div>
                    <button class="btn btn-success mt-3 mb-3">Add Campground</button>
                </form>
                <a href="/campground"><button class="btn btn-secondary mb-3">Back to campground</button></a>
            </div>
        </div>
    </body>

    </html>

    