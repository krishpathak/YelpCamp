<% layout('layout/boilerplate') %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Campground</title>
</head>
<body class="d-flex container">
    <div id="map" style="width: 100%; height:500px"></div>
    <h1>All Campground</h1>
    <a href="/campground/new"><button class="btn btn-primary mt-3 mb-3">Add new campground</button></a>
    
    <% for(let c of campground){%>
        <div class="card mb-3">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="<%= c.image.url %>" alt="<%= c.title %>" class="img-fluid" style="height: 300px; width: 350px; margin:10px">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= c.title %></h5>
                        <p class="card-text"><%= c.description %></p>
                        <p class="card-text">
                            <small class="text-muted"><%=c.location %></small>
                        </p>
                        <p> Price: $<%= c.price %></p>
                        <a href="/campground/<%=c.id %>"> <button class="btn btn-primary">View <%= c.title %></button></a>
                    </div>
                </div>
            </div>
        </div>        
    <% } %>
    
</body>
</html>
<script>
    const campgrounds={features:'<%- JSON.stringify(campground) %>'}
</script>
<script src="/javascripts/clusterMap.js"></script>